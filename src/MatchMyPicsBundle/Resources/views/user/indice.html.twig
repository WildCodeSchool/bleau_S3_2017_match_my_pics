{% extends 'MatchMyPicsBundle:user:layout_user.html.twig' %}

{% block body %}

<div class="container">
	<div class="row">
		<div class="col-xs-offset-4 col-xs-4 indice_title">
			<h2 class="title_indice">Indice :</h2>
		</div>
		<div class="col-xs-offset-1 col-xs-10 box_indice">
			<p>{{ challenge.indice.contenu }}</p>
		</div>
		<div class="col-xs-offset-3 col-xs-6 photo_indice">
			<img src="{{ challenge.indice.photo.sources }}" alt="{{ challenge.indice.photo.alt }}">
		</div>
		<div class="col-xs-12 malus_box">
			<i class="fa fa-exclamation-triangle fa-2x" aria-hidden="true" ></i>
			<p class="pts">-250 points</p>
		</div>
</div>
{% endblock %}