{% extends 'base.html.twig' %}
{% block cssglobal %}
{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/MatchMyPicsBundle/css/addchallenge.css') }}"/>
{% endblock %}

{% block body %}

    <div class="container">
        <h1>Votre challenge "{{ challenge.titre }}"</h1>
        <div class="row">
            <div class="col-xs-offset-3 col-xs-6 listAddChall">
                <h2>"{{ challenge.titre }}"</h2>
                <img src="{{ challenge.photo }}">
                <h3>{{ challenge.position }}</h3>
                <h3>{{ challenge.indice }}</h3>
                <h3>Difficulté : <strong class="etoile">{{ challenge.parametre}}</strong></h3>
                <div class="row boutonAction">
                    <div class="col-xs-offset-1 col-xs-10">
                        <a href="{{ path('challenge_index') }}">Retour à la liste des challenges</a>
                    </div>
                </div>
                <div class="row boutonAction">
                    <div class="col-xs-offset-1 col-xs-10">
                        <a href="{{ path('challenge_edit', { 'id': challenge.id }) }}" >Editer ce challenge</a>
                    </div>
                </div>
                <br>
                {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
                {{ form_end(delete_form) }}
            </div>

            </div>
        </div>
    </div>


{% endblock %}