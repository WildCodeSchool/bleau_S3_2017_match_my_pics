{% extends 'MatchMyPicsBundle:admin:layout_admin.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/matchmypics/css/listechallenge.css') }}"/>
{% endblock %}
{% block body %}
    <div class="container">
    <h1>Liste de vos équipes</h1>
    <div class="row">
        <div class="col-xs-12 btnCreate">
            <button type="button" class="btn btn-primary">
                <h2>
                    <a href="{{ path('fos_user_registration_register') }}">Créer une équipe
                    </a>
                </h2>
            </button>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <table class="table">
                <thead>
                <tr>
                    <th>Team</th>
                    <th>Photo</th>
                    <th>Score</th>
                    <th class="btnShow">Afficher</th>
                </tr>
                </thead>
                <tbody>
                {% for team in teams %}
                <tr>
                    <td>{{ team.username }}</td>
                    <td class="picture_team"><img src="{{ asset('image_upload/') ~ team.photo.sources }}"></td>
                    <td>{{ team.score }}</td>
                    <td class="btnShow">
                        <a href="{{ path('match_my_pics_team_show', { 'id': team.id }) }}" class="btn btn-primary" >Voir</a>
                    </td>

                </tr>
                </tbody>
                {% endfor %}
            </table>
        </div>
    </div>
{% endblock %}