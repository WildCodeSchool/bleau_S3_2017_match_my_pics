{% extends 'base.html.twig' %}
{% block stylesheets %}

    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/MatchMyPicsBundle/css/addchallenge.css') }}"/>
{% endblock %}
{% block cssglobal %}
{% endblock %}

{% block body %}
    <div class="container">
        <h1>Edition du challenge "{{ challenge.titre }}"</h1>
        <div class="row">
            <div class="col-xs-offset-2 col-xs-8 listAddChall">
                <div class="row">
                <ul>{{ form_start(edit_form) }}
                    <div class="col-xs-offset-3 col-xs-6">
                        <li><h2>Titre du challenge :</h2> {{ form_widget(edit_form.titre) }}</li>
                    </div>
                    <div class="col-xs-offset-3 col-xs-6">
                        <li><h2>Position du challenge :</h2>{{ form_widget(edit_form.position) }}</li>
                    </div>
                    <div class="col-xs-offset-3 col-xs-6">
                        <li><h2>Photo à matcher :</h2>{{ form_widget(edit_form.photo) }}</li>
                    </div>
                    <div class="col-xs-offset-3 col-xs-6">
                        <li><h2>Paramètres : </h2>{{ form_widget(edit_form.parametre) }}</li>
                    </div>
                    <div class="col-xs-offset-3 col-xs-6">
                        <li><h2>Indice du challenge :</h2> {{ form_widget(edit_form.indice) }}</li>
                    </div>
                </ul>
                    <div class="col-xs-offset-3 col-xs-6">
                        {{ form_widget(edit_form) }}
                        <input type="submit" value="Valider" />
                        {{ form_end(edit_form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}