{% extends 'MatchMyPicsBundle:admin:layout_admin.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/MatchMyPicsBundle/css/addchallenge.css') }}"/>
{% endblock %}


{% block body %}

    <div class="container chal">
    <h1>Création d'un player</h1>
    <div class="row">
        <div class="col-xs-offset-1 col-xs-10 listAddChall">
            {{ form_start(form) }}
            <div class="col-xs-offset-3 col-xs-6">
                <h2>{{ form_label(form.player) }}</h2> {{ form_widget(form.player) }}
            </div>
            <div class="col-xs-offset-3 col-xs-6">
                <h2>{{ form_label(form.team) }}</h2> {{ form_widget(form.team) }}
            </div>
        </div>
        <div class="col-xs-offset-4 col-xs-4 creerbtn">
            {{ form_widget(form) }}
            <input class="delete" type="submit" value="Créer" />
            {{ form_end(form) }}
        </div>
        <div class="row boutonAction">
            <div class="col-xs-offset-4 col-xs-4">
                <button class="boutonback">
                    <a href="{{ path('players_index') }}">Retour à la liste des players</a>
                </button>
            </div>
        </div>
    </div>
{% endblock %}