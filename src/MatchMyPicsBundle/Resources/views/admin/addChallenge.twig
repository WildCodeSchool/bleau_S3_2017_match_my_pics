{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/MatchMyPicsBundle/css/addchallenge.css') }}"/>
{% endblock %}
{% block cssglobal %}
{% endblock %}

{% block body %}

<div class="container chal">
    <h1>Création d'un challenge</h1>
    <div class="row">
        <div class="col-xs-offset-2 col-xs-8 listAddChall">
            <div class="row">
                <ul>{{ form_start(form) }}
                    <div class="col-xs-offset-3 col-xs-6">
                        <li><h2>Titre du challenge :</h2> {{ form_widget(form.titre) }}</li>
                    </div>
                    <div class="col-xs-offset-3 col-xs-6">
                        <li><h2>{{ form_label(form.position) }}</h2>{{ form_widget(form.position) }}</li>
                    </div>
                    <div class="col-xs-offset-3 col-xs-6">
                        <li><h2>{{ form_label(form.photo) }}</h2>{{ form_widget(form.photo) }}</li>
                    </div>
                    <div class="col-xs-offset-3 col-xs-6">
                        <li><h2>Paramètres : </h2>{{ form_widget(form.parametre) }}</li>
                    </div>
                    <div class="col-xs-offset-3 col-xs-6">
                        <li><h2>Indice du challenge :</h2> {{ form_widget(form.indice) }}</li>
                    </div>
                </ul>
                <div class="col-xs-offset-4 col-xs-4">
                    {{ form_widget(form) }}
                    <input class="delete" type="submit" value="Créer" />
                    {{ form_end(form) }}
                </div>
            </div>
        </div>

    </div>
</div>



{% endblock %}